<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tarena.xz.mapper.UserMapper">
	
	<!-- 根据用户名和密码查询数据 -->
	<select id="findUserByUP" parameterType="string" resultType="cn.tarena.xz.pojo.User">
		select * from xz_user where username=#{username} and pwd=#{pwd}
	</select>
	<!-- 根据插入注册数据 -->
	<insert id="signup" parameterType="string">
	 	insert into xz_user(name,username,pwd,gender,age,phone) values(#{name}, #{username}, #{pwd}, #{gender}, #{age}, #{phone})
	</insert>
</mapper>
